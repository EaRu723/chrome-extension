{
  "manifest_version": 3,
  "name": "Y - Bookmarker",
  "version": "1.0",
  "description": "Save bookmarks and highlights on Y",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications",
    "windows",
    "cookies"
  ],
  "host_permissions": [
    "https://ynot.lol/*",
    "https://ynot.lol/",
    "http://127.0.0.1:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/Frame1.png"
  },
  "background": {
    "service_worker": "background.js",
    "type: ": "module"
  },
  "icons": {
    "128": "icons/Frame1.png"
  },
  "commands": {
    "capture-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Capture selected text or URL"
    }
  }
}
